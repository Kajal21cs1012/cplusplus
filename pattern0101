#include<iostream>
using namespace std;
int main(){
    int i,j,count=0;
    for(i=1;i<=4;i++){
        for(j=1;j<=i;j++){
            count++;
       
       if(count%2==0)
       cout<<"1";
       else
       cout<<"0";
    }
        cout<<endl;
    }
}
//output
0
10
101
0101



#include<iostream>
using namespace std;
int main(){
    int i,j,count=0;
    for(i=4;i>=1;i--){
        for(j=i;j>=1;j--){
            count++;
       
       if(count%2==0)
       cout<<"1";
       else
       cout<<"0";
    }
        cout<<endl;
    }
}

//ouput
0101
010
10
1
