#include<iostream>
#include<math.h>
using namespace std;
int main(){
    int n,a=2,d=2,ap=0;
    cout<<"enter n"<<endl;
    cin>>n;
    int s=(2*a)+(n-1)*d;
    int su=n*s;
    int sum=su/2;
    cout<<sum<<endl;
    cout<<"ap is"<<endl;
    for(int i=0;i<4;i++){
        ap=ap+a;
        cout<<ap<<" ";
    }
}
